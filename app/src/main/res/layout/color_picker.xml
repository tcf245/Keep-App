<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#00000000"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_color_1"
            android:layout_width="@dimen/color_iv"
            android:layout_height="@dimen/color_iv"
            android:background="?attr/selectableItemBackground"
            android:src="@drawable/ic_material_color_light"
            android:tint="@color/red"/>

        <ImageView
            android:id="@+id/iv_color_2"
            android:layout_width="@dimen/color_iv"
            android:layout_height="@dimen/color_iv"
            android:background="?attr/selectableItemBackground"
            android:src="@drawable/ic_material_color_light"
            android:tint="@color/green"/>

        <ImageView
            android:id="@+id/iv_color_3"
            android:layout_width="@dimen/color_iv"
            android:layout_height="@dimen/color_iv"
            android:background="?attr/selectableItemBackground"
            android:src="@drawable/ic_material_color_light"
            android:tint="@color/yello"/>

        <ImageView
            android:id="@+id/iv_color_4"
            android:layout_width="@dimen/color_iv"
            android:layout_height="@dimen/color_iv"
            android:background="?attr/selectableItemBackground"
            android:src="@drawable/ic_material_color_light"
            android:tint="@color/blue"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/iv_color_5"
            android:layout_width="@dimen/color_iv"
            android:layout_height="@dimen/color_iv"
            android:background="?attr/selectableItemBackground"
            android:src="@drawable/ic_material_color_light"
            android:tint="@color/red_light"/>

        <ImageView
            android:id="@+id/iv_color_6"
            android:layout_width="@dimen/color_iv"
            android:layout_height="@dimen/color_iv"
            android:background="?attr/selectableItemBackground"
            android:src="@drawable/ic_material_color_light"
            android:tint="@color/green_light"/>

        <ImageView
            android:id="@+id/iv_color_7"
            android:layout_width="@dimen/color_iv"
            android:layout_height="@dimen/color_iv"
            android:background="?attr/selectableItemBackground"
            android:src="@drawable/ic_material_color_light"
            android:tint="@color/yello_light"/>

        <ImageView
            android:id="@+id/iv_color_8"
            android:layout_width="@dimen/color_iv"
            android:layout_height="@dimen/color_iv"
            android:background="?attr/selectableItemBackground"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_material_color_light"
            android:tint="@color/blue_light"/>
    </LinearLayout>

</LinearLayout>